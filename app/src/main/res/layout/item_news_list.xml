<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="?attr/listPreferredItemPaddingLeft"
    android:layout_marginEnd="?attr/listPreferredItemPaddingRight"
    android:layout_marginTop="?attr/listPreferredItemPaddingLeft"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_news_list_photo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_news_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:padding="@dimen/padding_card_view"
            tools:text="News Title" />

        <TextView
            android:id="@+id/tv_news_list_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:paddingLeft="@dimen/padding_card_view"
            android:paddingRight="@dimen/padding_card_view"
            android:paddingBottom="@dimen/padding_card_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Description"/>

        <Button
            android:id="@+id/btn_read_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_more"
            android:layout_gravity="end"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>